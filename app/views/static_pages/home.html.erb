<h1>StaticPages#home</h1>
<p>Find me in app/views/static_pages/home.html.erb</p>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
  <% @stuffs.each do |stuff| %>
    <div class="card" style="width: 18rem;">
      <div align="center">
        <%= image_tag(stuff.preview_image, width: 250) %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= stuff.title %></h5>
        <p class="card-text"><%= stuff.short_description %></p>
        <p class="card-text"><%= stuff.price %></p>
        <%= link_to 'Подробнее', stuff %>
      </div>
    </div>
  <% end %>
</div>
</div>
