
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
  <% @stuffs.each do |stuff| %>
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <div align="center">
              <%= link_to image_tag(stuff.preview_image, width: 250), stuff %>
          </div>
        <div class="card-body">
            <h5 class="card-title"><%= stuff.title %></h5>
              <div id="description" hidden>
                <p class="card-text"><%= stuff.short_description %></p>
              </div>
          <div class="card-text">
            <% if stuff.old_price %>
              <span class="discount-small text-muted"><%= stuff.old_price %> UAH</span>
            <% end %>
            <span class="price-small">   <%= stuff.price %> UAH</span>
          </div>

        </div>
        </div>
    </div>
  <% end %>
</div>
</div>
