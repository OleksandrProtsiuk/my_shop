
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
  <% @stuffs.each do |stuff| %>
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <div align="center">
              <%= link_to image_tag(stuff.preview_image, width: 250), stuff %>
          </div>
        <div class="card-body">
            <h5 class="card-title"><%= stuff.title %></h5>
            <p class="card-text"><%= stuff.short_description %></p>
            <p class="card-text"><%= stuff.price %> UAH</p>
        </div>
        </div>
        <p>&nbsp</p>
    </div>
  <% end %>
</div>
</div>
